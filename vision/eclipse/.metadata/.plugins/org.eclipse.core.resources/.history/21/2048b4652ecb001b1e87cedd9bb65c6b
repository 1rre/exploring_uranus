
#include <stdio.h>
#include <string.h>
#include <unistd.h>
#include <stdlib.h>

#include "alt_types.h"
#include "io.h"
#include "system.h"
#include "altera_avalon_pio_regs.h"

int main() {
  printf("Hello from Nios II!\n");
  int counter;
loop: // Is this necessary - interrupt registered?
  IOWR_ALTERA_AVALON_PIO_DATA(ARDUINO_BASE, counter++);
  counter %= 1024;
  IOWR_ALTERA_AVALON_PIO_DATA(ARDUINO_INTERRUPT, 1);
  IOWR_ALTERA_AVALON_PIO_DATA(ARDUINO_INTERRUPT, 0);
  goto loop;
}
