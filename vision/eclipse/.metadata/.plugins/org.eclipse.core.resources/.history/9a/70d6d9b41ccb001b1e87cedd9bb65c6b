#include "alt_types.h"
#include "sys/alt_stdio.h"
#include "io.h"
#include "system.h"
#include <stdio.h>
#include "sys/alt_cache.h"
#include "altera_avalon_spi.h"
#include "altera_avalon_spi_regs.h"
#include "sys/alt_irq.h"

int main() {
  printf("Hello from Nios II!\n");
  int return_code,ret;
  char spi_command_string_tx[10] = "test12345";
  char spi_command_string_rx[10] = "aaaaaaaaa";
  char* it = spi_command_string_tx;
loop:
  //This registers the Slave IRQ with NIOS
  return_code = alt_avalon_spi_command(SPI_0_BASE, 0, 8, spi_command_string_tx, 8, spi_command_string_rx, 0);
  if(return_code < 0) printf("ERROR SPI TX RET = %x \n" , return_code);
  printf("Transmit done. RET = %x spi_rx %x\n",return_code,spi_command_string_rx[0]);
  //RX is done via interrupts.
  if (*it++) goto loop;
  it = spi_command_string_tx;
  goto loop;
}
