
#include <stdio.h>
#include <string.h>
#include <unistd.h>
#include <stdlib.h>

#include "alt_types.h"
#include "io.h"
#include "system.h"
#include "altera_avalon_pio_regs.h"

#define ALIGN_TOP_R 016000
#define ALIGN_BOT_L 017777

void send() {
  IOWR_ALTERA_AVALON_PIO_DATA(ARDUINO_INTERRUPT_BASE, 1);
  usleep(100);
  IOWR_ALTERA_AVALON_PIO_DATA(ARDUINO_INTERRUPT_BASE, 0);
}

int main() {
  printf("Hello from Nios II!\n");
  int counter;
loop: // Is this necessary - interrupt registered?
  IOWR_ALTERA_AVALON_PIO_DATA(ARDUINO_BASE, counter++);
  counter %= 1024;
  send();

  goto loop;
}
